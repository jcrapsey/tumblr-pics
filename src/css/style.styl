/* WIP */

* {
	padding:0;
	margin:0;
}

html {
	overflow-y:scroll;

}

body {
	font-family:Arial;
	color:#F7FAFC;
	padding-top:70px;
	background:#F9FBFC;
	overflow:hidden;
	position:relative;
	line-height:120%;
	font-size:18px;
	letter-spacing:0.03em;
}

#content {
	position:relative;
	margin:0 auto;
}

#controls {
	padding:15px;
	position:fixed;

	z-index:100;

	top:0;left:0;right:0;
	border-bottom:1px solid #959999;
	box-shadow:1px 1px 5px rgba(0,0,0,0.5)

	.wrap {
		display: -webkit-box;
		-webkit-box-orient: horizontal;

		display: -moz-box;
		-moz-box-orient: horizontal;
		
		display: box;
		box-orient: horizontal;

		width:100%;

	}

	#tumblr_address {

		display: -webkit-box;
		-webkit-box-orient: horizontal;
		display: -moz-box;
		-moz-box-orient: horizontal;
		display: box;
		box-orient: horizontal;

		-webkit-box-flex: 1;
		-moz-box-flex: 1;
		box-flex: 1;

		overflow:hidden;
		background:#FFF;
		border-radius:3px;
		border:1px solid #959999;

		input {
			display:block;
			background:#F7FAFC;
			font-size:18px;
			border:none;
			padding:6px 8px;

			-webkit-box-flex: 1;
			-moz-box-flex: 1;
			box-flex: 1;
			
			&:focus {
				background:#FFF;
				outline: none;
			}

		}

		.submit {
			display:block;

			-webkit-box-flex: 0;
			-moz-box-flex: 0;
			box-flex: 0;

			font-size:16px;
			color:#313233;
			text-decoration:none;
			text-shadow:-1px -1px 0px rgb(255,255,255);
			padding:7px 8px;
			border-left:1px solid #959999;

			&:hover {
				background:#F7FAFC;
			}
		}
	}

	#scroll_top {

		-webkit-box-flex: 0;
		-moz-box-flex: 0;
		box-flex: 0;

		margin-left:10px;

		border-radius:3px;
		overflow:hidden;

		.top {
			display:block;

			font-size:16px;
			color:#313233;
			text-decoration:none;
			text-shadow:-1px -1px 0px rgb(255,255,255);
			padding:7px 8px;
			border:1px solid #959999;

			&:hover {
				background:#F7FAFC;
			}
		}
	}
}

.app-view {
	//background:rgb(30,41,81);
	//overflow-x:hidden;

	-webkit-transform: translate3d(0, 0, 0);
	-webkit-backface-visibility: hidden;
  	-webkit-perspective: 1000;

	&.loading {

	}
}

section {
	position:relative;
	margin:0 auto;


	&.animate {
		-webkit-transition: height 0.4s ease-out;
		-moz-transition: height 0.4s ease-out;
		-opera-transition: height 0.4s ease-out;
		transition: height 0.4s ease-out;
		

		article {
			-webkit-transition: all 0.4s ease-out;
			-moz-transition: all 0.4s ease-out;
			-opera-transition: all 0.4s ease-out;
			transition: all 0.4s ease-out;
		}
	}


}

article {
	position:absolute;
	padding:15px;
	margin:15px;

	border:solid 1px rgba(0,0,0,0.2)
	border-radius:3px

	overflow:hidden;
	display:block;
	float:left;

	-webkit-transform: translate3d(0, 0, 0);
	-moz-transform: translate3d(0, 0, 0);
	-webkit-backface-visibility: hidden;
  	-webkit-perspective: 1000;

	box-shadow:0px 3px 3px -3px rgb(10,20,10)

	.photo {
		background:#CCCCCC;
		//border-radius:3px;
	}

	.desc {
		font-size:8px;
		display:none;
	}

	li {
		display:none;
	}

	li:first-child{
		display:block;
	}

	img {
		-webkit-transform: translate3d(0, 0, 0);
		-webkit-backface-visibility: hidden;
  		-webkit-perspective: 1000;
		display:block;
		width:100%
		height:100%
		opacity:1;
		//border-radius:3px;
		-webkit-transition: all 0.25s linear;
		-webkit-transition: all 0.25s linear;
		-moz-transition: all 0.25s linear;
		-opera-transition: all 0.25s linear;
		transition: all 0.25s linear;
		
		-webkit-box-shadow: inset 0px 0px 20px -5px rgba(0, 0, 0, .8);
		box-shadow: inset 0px 0px 20px -5px rgba(0, 0, 0, .8);
	}

	&.error {
		.photo {
			background-color:#FFBABA;
			background-image:url(http://www.iconfinder.com/ajax/download/png/?id=42554&s=64);
			background-position:center;
			background-repeat:no-repeat;
		}
	}

	&.loading {

		img {
			opacity:0;
		}
	}

}

article {
	background:#FFF;
